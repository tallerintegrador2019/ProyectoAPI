@model ProyectoAPI.Models.Publicacion

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "PublicacionCRUD", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row login justify-content-center">

            <div class="col col-md-8">
                <div class="card center-align col-md-12">

                    <div class="card-action teal green white-text">
                        <h4>Editar Publicación</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)
                    </div>

                    <div class="formularios-diseno card-content col-md-12">

                        <div class="form-group">
                            @Html.LabelFor(model => model.titulo, htmlAttributes: new { @class = "control-label formularios-varios" })
                            <div class="col-md-10 boton-centrado">
                                @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.subtitulo, htmlAttributes: new { @class = "control-label formularios-varios" })
                            <div class="col-md-10 boton-centrado">
                                @Html.EditorFor(model => model.subtitulo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.subtitulo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label formularios-varios" })
                            <div class="col-md-10 boton-centrado">
                                @Html.TextAreaFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.fechaSubida, htmlAttributes: new { @class = "control-label formularios-varios" })
                            <div class="col-md-10 boton-centrado">
                                @Html.EditorFor(model => model.fechaSubida, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.fechaSubida, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.imagenPortada, htmlAttributes: new { @class = "control-label formularios-varios" })
                            <div class="col-md-10 boton-centrado">
                                <img src="~/Content/Images/@Model.imagenPortada" class="img-thumbnail" />
                                @Html.EditorFor(model => model.imagenPortada, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.imagenPortada, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @{ int contador = 1;}

                        @foreach (var item in Model.Paso)
                        {
                            @Html.HiddenFor(model => item.idPublicacion)
                            <div class="border">
                                <h6>Paso @contador</h6>
                                <div class="form-group">
                                    @Html.LabelFor(model => item.imagen, htmlAttributes: new { @class = "control-label formularios-varios" })
                                    <div class="col-md-10 boton-centrado">
                                        <img src="~/Content/Images/@item.imagen" class="img-thumbnail" />
                                        @Html.EditorFor(model => item.imagen, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => item.imagen, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => item.descripcion, htmlAttributes: new { @class = "control-label formularios-varios" })
                                    <div class="col-md-10 boton-centrado">
                                        @Html.TextAreaFor(model => item.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => item.descripcion, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            contador += 1;
                        }




                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10 boton-centrado">
                                <input type="submit" value="Guardar cambios" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
