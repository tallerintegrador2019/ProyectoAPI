@model ProyectoAPI.Models.Usuario

@{
    ViewBag.Title = "Login";
    var user = Session["idUsuario"];
    //if (user != null) {
    //    Layout = "~/Views/Shared/_UsuarioLayout.cshtml";
    //} else {
    //    Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
    //}


}
<style>
    
    .login {
        margin-left:100px;
      }
    .login label {
        font-size : 16px;
        }
    .card {
           margin-left:200px;
    }

</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <div class="row login center-align">
        <div class="col col-md-6">
            <div class="card center-align">
                  
                    <div class="card-action teal green white-text ">
                            <h4>Login</h4>
                            <hr />
                            <span id="errorGeneral" class="text-danger">@ViewBag.msg</span>
                        @if(ViewBag.nombreUsuario != null) { 
                            <span class="white-text">@ViewBag.nombreUsuario Se registro correctamente!!! Inicie Sesión</span>
                        }
                    </div>
               
                    <div class="card-content center-align">

                        <div class="form-field center-align">
                            @Html.Label("Email")
                            @Html.EditorFor(model => model.email)
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })

                        </div><br /><br />

                            <div class="form-field center-align">
                                @Html.Label("Contraseña")

                                @Html.EditorFor(model => model.pass, new { htmlAttributes = new {@type = "Password" } })
                                @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
                            </div><br />

                                                 
                           
                            <div class="form-field center-align">

                                <input type="submit" id="btnIngresar" name="btnIngresar" value="Ingresar" class="btn-large waves-green" />
                            </div>
                    </div>
                

               
            </div>
        </div>
    </div>
}
